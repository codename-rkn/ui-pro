<%
   title @revision.to_s
   breadcrumb_add 'Sites', sites_path
   breadcrumb_add @scan.url, site_path( @site )
   breadcrumb_add 'Scans', site_scans_path( @site )
   breadcrumb_add @scan.name, site_scan_path( @site, @scan )
%>

<% add_to_sidebar do %>
    <%= render partial: 'sidebar' %>
<% end %>

<div class="row" id="revision-info">
    <div class="col-md-12">
        <%= render partial: 'shared/scan_heading' %>

        <div class="description">
            <%= md @scan.description %>
        </div>

        <div class="text-muted" id="revision-info-details">
            <%= render partial: '/shared/scan_info', locals: {
                    scan: @scan
            } %>
            <%= render partial: '/shared/revision_info', locals: {
                    revision:           @scan.last_revision,
                    extended:           true,
                    hide_revision_name: true
            } %>
        </div>
    </div>
</div>

<%= render 'shared/scan_results' %>
