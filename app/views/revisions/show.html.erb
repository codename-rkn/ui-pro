<% content_for(:action_cable_channel, 'ScanResultChannel') %>

<%
   title params[:action].capitalize
   breadcrumb_add 'Sites', sites_path
   breadcrumb_add @scan.url, site_path( @site )
   breadcrumb_add 'Scans', site_scans_path( @site )
   breadcrumb_add @scan, site_scan_path( @site, @scan )
   breadcrumb_add @revision, site_scan_revision_path( @site, @scan, @revision )
%>

<% add_to_sidebar do %>
    <%= render partial: 'sidebar' %>
<% end %>

<div class="row" id="revision-info">
    <div class="col-md-12">
        <div id="scan-info-container">
            <%= render partial: 'shared/scan_heading' %>
        </div>
    </div>
</div>

<div id="scan-results" class="row">
   <%= render 'shared/scan_results' %>
</div>
