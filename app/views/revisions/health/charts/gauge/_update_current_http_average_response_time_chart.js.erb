<% value = revision.performance_snapshot.http_average_response_time.round( 2 ) %>

const currentHttpAverageResponseTimeGaugeChart = new window.Charts.gaugeChart(
    'current_http_average_response_time',
    {
        name: 'Average response times',
        value: <%= value %>,
        max: <%= PerformanceSnapshot::MAX_HTTP_AVERAGE_RESPONSE_TIME %>,
        unit: 'seconds/response',
        better: 'low'
    }
);

currentHttpAverageResponseTimeGaugeChart.initializeChart();

<% if local_assigns[:update] %>
    currentHttpAverageResponseTimeGaugeChart.updateDataset({
        value: <%= value %>
    });
<% end %>
