<% if breadcrumbs.any? %>
<nav class="breadcrumbs">
    <ul class="bread">
        <li>
            <%= link_to root_path do %>
                <i class="fa fa-home fa-icon-white"></i>
            <% end %>
        </li>
        <% breadcrumbs.each do |b| %>
            <li>
                <%= link_to b[:title], b[:url] %>
            </li>
        <% end %>
        <li class="active">
            <%= link_to yield( :title ), request.path %>
        </li>
    </ul>
</nav>
<% end %>
