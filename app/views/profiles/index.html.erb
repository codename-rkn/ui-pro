<h1>Listing profiles</h1>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Scans</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @profiles.each do |profile| %>
        <tr>
            <td><%= profile.name %></td>
            <td><%= profile.scans.size %></td>

            <% if policy(profile).show? %>
                <td><%= link_to 'Show', profile %></td>
            <% end %>

            <% if policy(profile).edit? %>
                <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <% end %>

            <% if policy(profile).destroy? %>
                <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<% if policy(Profile).new? %>
    <%= link_to 'New Profile', new_profile_path %>
<% end %>
