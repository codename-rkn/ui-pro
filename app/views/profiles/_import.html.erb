<div id="profile-import" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &#10006;
                </button>
                <h3>Import profile:</h3>
            </div>

            <%= simple_form_for :profile, url: import_profiles_url, html: { multipart: true } do |f| %>
                <div class="modal-body">
                    <%= f.error_notification %>
                    <%= f.input :file, as: :file, label: false,
                                hint: 'Supported formats are: YAML, JSON, AFP (CLI-generated profiles)'
                    %>
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, value: 'Import', class: 'btn btn-sm btn-primary' %>
                    <button class="btn btn-sm btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
                </div>
            <% end %>
        </div>
    </div>
</div>
