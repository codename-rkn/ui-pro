    <li class="nav-header">
        <a>
            Also logged by
        </a>
    </li>

    <% @issue.siblings.each do |sibling| next if @issue.id == sibling.id %>
    <li>
        <%= link_to "#{sibling.revision.index.ordinalize} revision of #{sibling.scan} scan",
                    site_scan_revision_issue_path(
