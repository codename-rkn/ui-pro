<%
  counter = 0
%>

<table class="table table-hover table-sm table-requests">
  <thead>
  <tr>
    <th>#</th>
    <th>URL</th>
  </tr>
  </thead>
  <tbody>
  <% page.dom.requests.each do |url| %>
    <tr id="<%= id %>-requests-<%= counter %>" >
      <th>
        <a href="<%= id_to_location id %>/requests/<%= counter %>">
          <%= counter %>
        </a>
      </th>

      <td>
        <a href="<%= url %>">
          <%= url %>
        </a>
      </td>
    </tr>
  <%
    counter += 1
    end %>

  </tbody>
</table>
