<%
  counter = 0
%>

<table class="table table-hover table-sm table-requests">
  <thead>
  <tr>
    <th>#</th>
    <th>Method</th>
    <th>URL</th>
  </tr>
  </thead>
  <tbody>
  <% page.dom.requests.each do |request| %>
    <tr id="<%= id %>-requests-<%= counter %>" class="dom-processing-request-with-raw" onclick="<%= "$('#request-raw-#{request.id}').toggle()" %>">
      <th>
        <a href="<%= id_to_location id %>/requests/<%= counter %>">
          <%= counter %>
        </a>
      </th>
      <td><code><%= request.http_method %></code></td>
      <td>
        <a href="<%= request.url %>">
          <%= request.url %>
        </a>
      </td>
    </tr>
    <tr>
      <td colspan="3" class="dom-processing-request-raw" id="request-raw-<%= request.id %>">
        <div class="row">
          <div class="col-md-6">
            <pre class="dom-processing-request-raw-data highlight-container code-container"><%= request.raw %></pre>
          </div>
        </div>
      </td>
    </tr>
  <%
    counter += 1
    end %>

  </tbody>
</table>
