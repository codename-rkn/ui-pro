<%= simple_form_for( [@site, @scan, @revision, @entry], remote: true, html: { id: 'state-form' } ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs <%= 'without-top-radius'.html_safe if @entry.reviewed_by_revision %>">
        <%= f.input :state,
                    as:            :select,
                    collection:    Entry::STATES,
                    default:       Entry::DEFAULT_STATE,
                    label_method:  proc { |v| v.humanize.html_safe },
                    include_blank: false,
                    label:         false,
                    input_html:    { autocomplete: 'off' }
        %>
    </div>
<% end %>
