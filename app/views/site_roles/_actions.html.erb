<%
   button_size = local_assigns[:button_size] || 'sm'
%>

<% return if site_role.guest? %>

<%= link_to edit_site_role_path( site_role.site, site_role ),
            class: "btn btn-#{button_size} btn-warning" do %>
    <i class="fas fa-edit"></i>
<% end %>

<% if site_role.scans.empty? %>
    <%= link_to site_role_path( site_role.site, site_role ),
                method: :delete,
                remote: true,
                class: "btn btn-#{button_size} btn-danger",
                data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash"></i>
    <% end %>
<% end %>
