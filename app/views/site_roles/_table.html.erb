<table id="table" class="table table-hover table-striped table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Login type</th>
        <th>Scans</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @site_roles.each do |site_role| %>
        <tr>
            <td>
                <a href="#!/roles/<%= site_role.id %>"
                   data-js="<%= site_role_path( site_role.site, site_role ) %>">
                    <%= site_role.name %>
                </a>
            </td>

            <td>
                <%= site_role.login_type %>
            </td>

            <td>
                <%= site_role.scans.size %>
            </td>

            <td>
                <%= render 'actions', site_role: site_role %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
