<% content_for(:action_cable_channel, 'SiteRoleChannel') %>

<%
   title 'User roles'
   breadcrumb_add 'Sites', sites_path
   breadcrumb_add @site.url, site_path( @site )
%>

<div class="page-header">
    <h1>
        User roles

        <a title="New scan"
           class="btn btn-sm btn-primary"
           href="<%= new_site_role_path(@site) %>">
            <i class="fa fa-plus"></i>
        </a>
    </h1>

    <p class="lead">
        Use web application roles to perform scans as users with different privilege levels.
    </p>
</div>

