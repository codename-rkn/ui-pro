<%
   title 'Editing'
   breadcrumb_add 'Sites', sites_path
   breadcrumb_add @site.url, site_path( @site )
   breadcrumb_add 'User roles', site_roles_path( @site )
   breadcrumb_add @site_role, site_roles_path( @site, @site_role )
%>

<% add_to_sidebar do %>
    <%= render partial: 'sidebar', locals: { submit: true } %>
<% end %>

<h1>
    Editing <%= link_to @site_role, site_roles_path( @site, @site_role ) %> role
</h1>

<p class="alert alert-help">
    <i class="fa fa-info-circle"></i>

    Don't be afraid to experiment with the configuration, each scan revision
    will keep a copy and allow you to get it back at any time.
</p>

<%= render 'form' %>
