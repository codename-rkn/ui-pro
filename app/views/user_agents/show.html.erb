<%
   title @user_agent.name
   breadcrumb_add 'User agents', user_agents_path
%>

<% add_to_sidebar do %>
    <%= render partial: 'sidebar', locals: { submit: false } %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>
                <%= @user_agent.name %>
            </h1>

            <div class="lead">
                <%= @user_agent.http_user_agent %>

                <br/>
                <small>
                    <%= @user_agent.browser_cluster_screen_width %>x<%= @user_agent.browser_cluster_screen_height %>
                </small>
            </div>
        </div>
    </div>
</div>
