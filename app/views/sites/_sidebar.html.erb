<%
   site_scans = @issues_summary[:scans]
%>
<ul id="site-sidebar" class="nav nav-pills nav-stacked">
    <li>&nbsp;</li>

    <li class="<%= 'active' if request.path == site_path( @site ) %>">
        <%= link_to @site do %>
            Site overview
        <% end %>

        <hr/>
    </li>

    <% site_scans.each do |scan| %>
    <li>
        <%= link_to [scan.site, scan] do %>
            <%= scan.name %>

            <i class="fa fa-arrow-right"></i>
        <% end %>
    </li>

    <li>
        <small>
            <span class="text-muted">
                <% if scan.revisions.size > 0 %>
                    <%= pluralize scan.revisions.size, 'revision' %>,
                    <%= pluralize scan.sitemap_entries.size, 'page' %> &
                    <%= pluralize scan.issues.size, 'issue' %>
                    using <%= link_to scan.profile, scan.profile %>.
                <% else %>
                    Has not run.
                <% end %>
            </span>
        </small>
    </li>
    <% end %>
</ul>
