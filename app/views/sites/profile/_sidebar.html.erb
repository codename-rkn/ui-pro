<%
   sections = {
        scans:     'Scans <small>&mdash; Scan settings</small>',
        scope:     'Scope <small>&mdash; Special handling of resources</small>',
        inputs:    'Inputs <small>&mdash; Custom inputs and fill-in values</small>',
        http:      'HTTP <small>&mdash; HTTP settings</small>',
        browser:   'Browser <small>&mdash; Browser settings</small>'
}
%>

<button class="btn btn-primary mb-2" id="site_profile-submit">
    Save
</button>

<% if @site.revisions.active.any? %>
    <span data-bs-toggle="tooltip" title="Save and apply to active scans.">
        <button class="btn btn-light btn-warning" data-bs-toggle="modal"
                data-bs-target="#site_profile-submit-and-apply-confirm">
            Save and apply
        </button>
    </span>
<% end %>

<hr/>

<div id="scrollspy-container">
    <ul class="nav nav-pills nav-stacked flex-column">
        <li class="nav-item">
            <a href="#top" class="nav-link scroll">
                <i class="fa fa-chevron-up"></i>
                Top
            </a>
        </li>
        <% sections.each do |id, title| %>
            <li class="nav-item">
                <a href="#<%= id.to_s %>" class="nav-link scroll">
                    <%= title.to_s.html_safe %>
                </a>
            </li>
        <% end %>
    </ul>
</div>
