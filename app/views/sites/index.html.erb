<h1>
    Sites

    <%= link_to new_site_path, class: 'btn btn-xs btn-primary' do %>
        <i class="fa fa-plus"></i>
    <% end %>
</h1>

<div id="owned-sites">
    <% if @shared_sites.verified.any? %>
        <h2>Yours</h2>
    <% end %>

    <% if @sites.unverified.any? %>
        <div class="row">
            <div class="col-md-3">
                <h3>Pending verification of ownership:</h3>

                <p class="text-muted">
                    Please verify ownership of the these sites to enable scanning.
                </p>
            </div>

            <div class="col-md-9">
                <%= render 'table_unverified', sites: @sites.unverified %>
            </div>
        </div>

        <hr/>
    <% end %>

    <% if @sites.verified.any? %>
    <div class="row">
        <div class="col-md-4">
            <%= render 'table_verified', sites: @sites.verified %>
        </div>

        <div class="col-md-8">
            <h4>Click on a row for a quick view of a site's unresolved issues.</h4>
            <h4>Showing [site url]</h4>
        </div>
    </div>
    <% end %>
</div>

<% if @shared_sites.verified.any? %>
    <div id="shared-sites">
        <h2>Shared</h2>

        <%= render 'table_verified', sites: @shared_sites.verified %>
    </div>
<% end %>
