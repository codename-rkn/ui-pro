<%
   title @site.url
   breadcrumb_add 'Sites', sites_path
%>

<div class="row" id="site-info">
    <div class="col-md-12">
        <%= render partial: 'shared/scan_heading' %>

        <p class="text-muted" id="site-info-scan-time">
            <% if (revision = @site.revision_in_progress) %>
                <i class="fa fa-spin fa-circle-o-notch"></i>

                <%= link_to revision, [@site, revision.scan, revision] %>
                of
                <%= link_to revision.scan.name, [@site, revision.scan] %>

                scan started on <%= l revision.started_at %>
                &mdash;
                <%= seconds_to_hms revision.duration %>.

            <% elsif (last_revision = @site.revisions.last_performed) %>
                <%= link_to last_revision, [@site, last_revision.scan, last_revision] %>
                of
                <%= link_to last_revision.scan.name, [@site, last_revision.scan] %>

                scan started on <%= l last_revision.started_at %>;
                <%= last_revision.scan.status %> on <%= l last_revision.stopped_at %>
                &mdash;
                <%= seconds_to_hms last_revision.duration %>.
            <% end %>
        </p>
    </div>
</div>

<div id="site-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#!/issues">
                Issues
            </a>
        </li>

        <li>
            <a href="#!/scans">
                Scans
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="issues">
            <%= render partial: 'shared/scans_with_issue_summary' %>
        </div>

        <div class="tab-pane" id="scans">
            <%= render partial: 'scans/tables' %>
        </div>
    </div>
</div>
