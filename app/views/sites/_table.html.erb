<%= content_tag :table, class: "table table-hover table-striped #{'hidden' if sites.blank?}".strip do %>
    <thead>
        <tr>
            <th>URL</th>
            <th>State</th>
            <th>Issues</th>
            <th>Scans</th>
            <th>Revisions</th>
            <th>Last scanned</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <%= render partial: 'site', collection: sites, as: :site %>
    </tbody>
<% end %>
