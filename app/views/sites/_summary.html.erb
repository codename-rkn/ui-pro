<% if @site.sitemap_entries.with_issues.size > 0 %>
    <%= render partial: 'sites/summary/statistics' %>

    <hr/>

    <div class="row">

        <div class="col-md-3 summary-sitemap-container" id="summary-sitemap">
            <h3>
                Pages with issues

                <span class="badge">
                    <%= @site.sitemap_entries.with_issues.size %>
                </span>
            </h3>
            <%= render partial: 'sites/summary/sitemap' %>
        </div>

        <div class="col-md-9 summary-issues-container" id="summary-issues">
            <%= render partial: 'sites/summary/issues' %>
        </div>
    </div>
<% else %>
    <h3 class="alert alert-info">No issues have been identified yet...</h3>
<% end %>
