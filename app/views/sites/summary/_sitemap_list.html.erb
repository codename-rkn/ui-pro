<ul>
    <% scoped_find_each(sitemap) do |entry| %>
        <li
                class="sitemap-entry sitemap-entry-with<% 'out' if entry.issues.size == 0 %>-issues"
        >
            <code><%= entry.code %></code>

            <% if entry.issues.size > 0 %>
                <%= link_to_url_with_external entry.url, '#' %>
            <% else %>
                <%= link_to_url_with_external entry.url %>
            <% end %>

        </li>
    <% end %>
</ul>
