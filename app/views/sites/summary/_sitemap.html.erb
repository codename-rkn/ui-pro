<div id="sitemap-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#all" role="tab" data-toggle="tab">
                All

                <span class="badge">
                    <%= @site.sitemap_entries.size %>
                </span>
            </a>
        </li>

        <li>
            <a href="#with-issues" role="tab" data-toggle="tab">
                With issues

                <span class="badge">
                    <%= @site.sitemap_entries.with_issues.size %>
                </span>
            </a>
        </li>

        <li>
            <a href="#without-issues" role="tab" data-toggle="tab">
                Without issues

                <span class="badge">
                    <%= @site.sitemap_entries.without_issues.size %>
                </span>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="all">
            <%= render 'sites/summary/sitemap_list',
                       sitemap: @site.sitemap_entries %>
        </div>

        <div class="tab-pane" id="with-issues">
            <%= render 'sites/summary/sitemap_list',
                       sitemap: @site.sitemap_entries.with_issues %>
        </div>

        <div class="tab-pane" id="without-issues">
            <%= render 'sites/summary/sitemap_list',
                       sitemap: @site.sitemap_entries.without_issues %>
        </div>
    </div>
</div>
