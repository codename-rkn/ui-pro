<div class="row-fluid">
    <div class="col-md-4">
        <h2>
            Users
        </h2>

        <ul>
            <% (@site.users - [current_user]).each do |user| %>
                <li>
                    <%= link_to user, user %> -
                    <%= link_to 'Remove', user %>
                </li>
            <% end %>
        </ul>

        <%= simple_form_for :site_invite_user, url: invite_user_site_path do |f| %>
            <%= f.input :email, placeholder: 'E-mail address', label: false %>

            <div class="form-actions">
                <%= f.button :submit, value: 'Invite' %>
            </div>
        <% end %>
    </div>

    <div class="col-md-8">
        <h2>
            Ownership verification
        </h2>

        <%= refreshable_element action: :verification_form do
            render partial: 'form_verification', locals: { site: @site }
        end %>
    </div>
</div>
