<%
    external = options.delete(:external)
    internal = options.delete(:internal)
    display  = options.delete(:display) || external
%>
<small>
    <%= link_to external, target: '_blank' do %>
        <i class="fa fa-external-link"></i>
    <% end%>
</small>

<%= internal ? link_to( display, internal, options ) : display %>
