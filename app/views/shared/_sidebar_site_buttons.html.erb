<%= link_to new_site_scan_path( @site ), title: 'New scan',
            class: 'btn btn-sm btn-primary' do %>
    <i class="fa fa-plus"></i>
<% end %>

<%= link_to site_roles_path( @site ), title: 'User roles',
            class: 'btn btn-sm btn-default' do %>
    <i class="fa fa-users"></i>
<% end %>

<%= link_to edit_site_path( @site ), title: 'Settings',
            class: 'btn btn-sm btn-default' do %>
    <i class="fa fa-cog"></i>
<% end %>

<%= link_to @site, method: :delete,
            title: 'Delete site',
            class: 'btn btn-sm btn-danger',
            data: {
                    confirm: 'Deleting this site will destroy all ' +
                                     'associated data, are you sure?'
            } do %>
    <i class="fa fa-trash"></i>
<% end %>
