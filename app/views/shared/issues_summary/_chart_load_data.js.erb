var chart_loader = function(){
    var chart = window.generateIssuesChart();
    chart.load({
        columns: [
            <%= (['x'] + data[:issue_names].keys).to_json.html_safe %>,
            <%= (['Issues'] + data[:issue_names].values).to_json.html_safe %>,
            <%= (['Severity'] + data[:severity_index_for_issue].values).to_json.html_safe %>,
        ]
    });

    chart.regions.remove();
    chart.regions.add( <%= data[:severity_regions].to_json.html_safe %> );
};

$(document).ready(chart_loader);
