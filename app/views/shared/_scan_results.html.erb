<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#!/issues-summary">
                    Summary
                </a>
            </li>

            <li>
                <a href="#!/sitemap">
                    Sitemap
                </a>
            </li>

            <% if @reviewed_issues_summary[:chart_data][:total_issues].to_i > 0 %>
                <li>
                    <a href="#!/issues-reviewed">
                        Auto-reviewed issues
                    </a>
                </li>
            <% end %>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="issues-summary">
                <%= render partial: 'shared/scan_results/issues_summary', locals: {
                        data: @issues_summary
                } %>
            </div>

            <div class="tab-pane" id="sitemap">
                <%= render partial: 'shared/scan_results/sitemap', locals: {
                        data: @reviewed_issues_summary
                } %>
            </div>

            <% if @reviewed_issues_summary[:chart_data][:total_issues].to_i > 0 %>
                <div class="tab-pane" id="issues-reviewed">
                    <%= render partial: 'shared/scan_results/reviewed_issues', locals: {
                            data: @reviewed_issues_summary
                    } %>
                </div>
            <% end %>
        </div>
    </div>
</div>
