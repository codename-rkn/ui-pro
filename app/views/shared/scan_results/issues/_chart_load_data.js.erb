var chart_loader = function(){
    const chart = new window.Charts.issueChart('chart-issues');

    chart.initializeChart();

    const data = {
        labels: <%= data[:issue_names].keys.to_json.html_safe %>,
        issueNames: <%= data[:issue_names].values.to_json.html_safe %>,
        severityIndexForIssue: <%= data[:severity_index_for_issue].values.to_json.html_safe %>
    };

    chart.updateDataset(data);
};

$(document).ready(chart_loader);
