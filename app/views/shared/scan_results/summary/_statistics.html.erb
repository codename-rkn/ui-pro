<%
  scan_results_owner   = data[:scan_results_owner]
  coverage_entry_count = scan_results_owner.sitemap_entries.coverage.size
  entry_count          = scan_results_owner.entries.size
%>

  <div class="row">
    <div class="col-md-6">
      <h3>
        <strong><%= coverage_entry_count %></strong>
        <%= 'page'.pluralize coverage_entry_count %>
      </h3>
    </div>

    <div class="col-md-6">
      <h3>
        <strong><%= entry_count %></strong>
        <%= 'entry'.pluralize entry_count %>
      </h3>
    </div>
  </div>
