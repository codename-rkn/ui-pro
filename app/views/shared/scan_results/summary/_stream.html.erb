<%
    col = 0

    if @summary[:reviews].any?
        col += 1
    end

    if @summary[:entries].any?
        col += 1
    end

    if @summary[:coverage].any?
        col += 1
    end

    if col > 0
        col = 12 / col
    end

%>
<div class="row">

    <% if col > 0 %>
    <% if @summary[:coverage].any? %>
        <div class="col-md-<%= col %>">
            <%= render partial: '/shared/scan_results/summary/parts/coverage' %>
        </div>
    <% end %>

    <% if @summary[:entries].any? %>
        <div class="col-md-<%= col %>">
            <%= render partial: '/shared/scan_results/summary/parts/entries' %>
        </div>
    <% end %>

    <% if @summary[:reviews].any? %>
        <div class="col-md-<%= col %>">
            <%= render partial: '/shared/scan_results/summary/parts/reviews' %>
        </div>
    <% end %>
    <% else %>
        <p class="alert alert-info">
            No data yet...
        </p>
    <% end %>
</div>
