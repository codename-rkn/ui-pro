<div class="row">
    <div class="col">
        <%= render partial: 'shared/plugin_options/option_label', locals: {
                plugin_name: plugin_name,
                option:      option,
                value:       value
        } %>

        <%= render partial: 'shared/plugin_options/option_input', locals: {
                plugin_name: plugin_name,
                option:      option,
                value:       value,
                disabled:    disabled
        } %>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="form-text text-muted">
            <%= option.description %>
        </div>
    </div>
</div>
