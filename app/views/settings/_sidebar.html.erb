<%
   sections = {
       scans:   'Scans <small>&mdash; Scan settings</small>',
       http:    'HTTP <small>&mdash; Network settings</small>',
       browser: 'Browser <small>&mdash; Browser settings</small>'
}
%>

<button class="btn btn-secondary btn-primary" onclick="$('.profile-form').submit()">
    Save
</button>

<hr/>

<div id="scrollspy-container">
    <ul class="nav nav-pills nav-stacked sidenav">
        <li>
            <a href="#top" class="scroll">
                <i class="fa fa-chevron-up"></i>
                Top
            </a>
        </li>
        <% sections.each do |id, title| %>
            <li>
                <a href="#<%= id.to_s %>" class="scroll">
                    <%= title.to_s.html_safe %>
                </a>
            </li>
        <% end %>
    </ul>
</div>
