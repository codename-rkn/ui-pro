<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @scans.each do |scan| %>
        <tr>
            <td><%= scan.name %></td>
            <td><%= scan.description %></td>

            <% if policy(scan).show? %>
                <td><%= link_to 'Show', [@site, scan] %></td>
            <% end %>

            <% if policy(scan).edit? %>
                <td><%= link_to 'Edit', edit_site_scan_path( @site, scan ) %></td>
            <% end %>

            <% if policy(scan).destroy? %>
                <td><%= link_to 'Destroy', [@site, scan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>
