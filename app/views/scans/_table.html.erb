<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Profile</th>
            <th>Pages</th>
            <th>Issues</th>
            <th>Revisions</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
    <% @scans.each do |scan| %>
        <tr>
            <% if policy(scan).show? %>
                <td><%= link_to scan.name, [@site, scan] %></td>
            <% else %>
                <td><%= scan.name %></td>
            <% end %>

            <td><%= link_to scan.profile.name, scan.profile %></td>
            <td><%= scan.sitemap_entries.size %></td>
            <td>
                <%= scan.issues.size %>
            </td>
            <td><%= scan.revisions.size %></td>

            <td>
                <% if policy(scan).edit? %>
                    <%= link_to edit_site_scan_path( @site, scan ),
                            class: 'btn btn-sm btn-warning' do %>
                        <i class="fa fa-pencil"></i>
                    <% end %>
                <% end %>

                <% if policy(scan).destroy? %>
                    <%= link_to [@site, scan], method: :delete,
                            class: 'btn btn-sm btn-danger',
                            data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-trash"></i>
                    <% end %>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
