<%= simple_form_for( [@site, @scan] ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.association :profile, collection: current_user.profiles,
                          disabled: !!@scan.id %>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>
