<div class="row">
    <div id="site-scans" class="col-md-8">
        <div id="site-scans-active" class="row table-container">
            <div class="col-md-12">
                <h2>Active</h2>

              <% if active_scans.any? %>
                <%= render partial: 'scans/tables/active',
                           locals: { scans: active_scans, site: site } %>

              <% else %>
                <p class="alert alert-info">
                    No active scans.
                </p>
                <% end %>
            </div>
        </div>

        <div id="site-scans-suspended" class="row table-container">
            <div class="col-md-12">
                <h2>Suspended</h2>

              <% if suspended_scans.any? %>
                <%= render partial: 'scans/tables/suspended',
                           locals: { scans: suspended_scans, site: site } %>

              <% else %>
                <p class="alert alert-info">
                    No suspended scans.
                </p>

                <% end %>
            </div>
        </div>

        <div id="site-scans-finished" class="row table-container">
            <div class="col-md-12">
                <h2>Finished</h2>

              <% if finished_scans.any? %>
                <%= render partial: 'scans/tables/finished',
                           locals: { scans: finished_scans, site: site } %>

              <% else %>
                <p class="alert alert-info">
                    No finished scans.
                </p>

                <% end %>
            </div>
        </div>
    </div>

    <div id="site-scans-scheduled" class="col-md-4 table-container">
        <h2>Schedule</h2>

        <%= render 'scans/tables/schedule', scheduled_scans: scheduled_scans, site: site %>
    </div>
</div>
