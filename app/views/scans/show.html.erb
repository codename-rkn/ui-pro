<%
   title @scan.name
   breadcrumb_add 'Sites', sites_path
   breadcrumb_add @scan.url, site_path( @site )
%>

<div class="row">
    <div class="col-md-12" id="scan-info">
        <h1>
            <%= link_to @scan.name.capitalize, [@scan.site, @scan] %>
            (<%= link_to @scan.profile, @scan.profile %>)
            for
            <%= link_to_url_with_external display: @scan.url,
                                          external: @site.url,
                                          internal: @site %>

            <%= link_to edit_site_scan_path( @site, @scan ),
                        class: 'btn btn-xs btn-warning' do %>
                <i class="fa fa-pencil"></i>
            <% end %>

            <%= link_to [@site, @scan], method: :delete,
                        class: 'btn btn-xs btn-danger',
                        data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash"></i>
            <% end %>
        </h1>

        <div class="description">
            <%= md @scan.description %>
        </div>

        <p class="text-muted">
            <% if @scan.schedule.scheduled? %>
                Running <%= link_to @scan.schedule, '#' %>.
            <% end %>
        </p>

        <% if (last_revision = @scan.revisions.last) %>
            <p class="text-muted" id="scan-info-last-revision-time">
            <% if @scan.in_progress? %>
                <i class="fa fa-spin fa-circle-o-notch"></i>
                Started on <%= l last_revision.started_at %>
                &mdash;
                <%= Arachni::Utilities.seconds_to_hms last_revision.duration %>.
            <% elsif last_revision.stopped_at %>
                Last started on <%= l last_revision.started_at %>,
                stopped on <%= l last_revision.stopped_at %>
                &mdash;
                <%= Arachni::Utilities.seconds_to_hms last_revision.duration %>.
            <% end %>
            </p>
        <% end %>
    </div>
</div>

<hr/>

<div class="row">
    <div id="sidebar" class="col-md-2">
        <%= render partial: 'sidebar' %>
    </div>

    <div id="scan-data" class="col-md-10">
        <% if @issues_summary %>
            <%= render partial: 'shared/issues_summary' %>
        <% else %>
            No revisions...
        <% end %>
    </div>
</div>
