<table id="scans-active" class="table table-hover table-striped table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Profile</th>
        <th>Pages</th>
        <th>Issues</th>
        <th>Revisions</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% scans.each do |scan| %>
        <tr>
            <td><%= link_to scan.name, [@site, scan] %></td>
            <td><%= link_to scan.profile.name, scan.profile %></td>
            <td><%= scan.sitemap_entries.size %></td>
            <td>
                <%= scan.issues.size %>
            </td>
            <td><%= scan.revisions.size %></td>

            <td>
                <a class="btn btn-sm btn-warning" title="Pause scan"
                   href="#" data-confirm="Are you sure you want to pause the scan?">
                    <i class="fa fa-pause"></i>
                </a>

                <a class="btn btn-sm btn-default" title="Suspend scan" href="#"
                   data-confirm="Are you sure you want to suspend the scan?">
                    <i class="fa fa-eject"></i>
                </a>

                <a class="btn btn-sm btn-danger" title="Abort scan" href="#"
                   data-confirm="Are you sure you want to abort the scan?">
                    <i class="fa fa-stop"></i>
                </a>

                <%= link_to edit_site_scan_path( @site, scan ),
                            class: 'btn btn-sm btn-warning' do %>
                    <i class="fa fa-pencil"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
