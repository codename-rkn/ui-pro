<table id="scans-schedule-pending" class="table table-condensed table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Starts at</th>
        <th>Stops after</th>
        <th>Every</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @scheduled_scans.each do |scan| %>
        <% schedule = scan.schedule %>

        <tr>
            <td>
                <%= link_to scan, site_scan_path( scan.site, scan )%>
            </td>

            <td>
                <% if schedule.due? %>
                    <span class="label label-info"
                        title="Parallel scan limit has been reached, the scan will run as soon as there's an available slot."
                        >
                        ASAP
                    </span>
                <% else %>
                    <%= l( schedule.start_at ) %>
                <% end %>
            </td>

            <td>
                <%= if schedule.stop_after_hours
                        schedule.stop_after_hours.to_i.to_s + ' hours'
                    end %>
            </td>

            <td>
                <%= if schedule.day_frequency
                        pluralize( schedule.day_frequency, 'day' )
                    end %>

                <%= 'and' if schedule.day_frequency && schedule.month_frequency %>

                <%= if schedule.month_frequency
                        pluralize( schedule.month_frequency, 'month' )
                    end %>
            </td>

            <td>
                <%= link_to edit_site_scan_path( @site, scan ),
                            title: 'Edit scan settings.',
                            class: 'btn btn-sm btn-warning' do %>
                    <i class="fa fa-pencil"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
