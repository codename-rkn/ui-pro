<table id="scans-suspended" class="table table-hover table-striped table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Revision</th>
        <th>Profile</th>
        <th>Duration</th>
        <th>Pages (current/overall)</th>
        <th>Issues (current/overall)</th>
        <th>Max severity (current/overall)</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% scans.each do |scan| %>
        <tr>
            <%= render partial: '/scans/tables/row_fields', locals: { scan: scan } %>

            <td>
                <%= link_to restore_site_scan_path( @site, scan ),
                            method: :patch,
                            title: 'Restore scan',
                            class: 'btn btn-sm btn-success',
                            data: {
                                    confirm: 'Are you sure you want to restore the scan?'
                            } do %>
                    <i class="fa fa-play-circle"></i>
                <% end %>

                <%= link_to [@site, scan], method: :delete,
                            title: 'Delete scan',
                            class: 'btn btn-sm btn-danger',
                            data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
